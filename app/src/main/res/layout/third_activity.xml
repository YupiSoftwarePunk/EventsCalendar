<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="8dp"
    android:background="#E3F2FD">

    <!-- Контейнер для списка событий -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"> <!-- Отступ вниз -->

        <LinearLayout
            android:id="@+id/eventsContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="8dp"/>
    </ScrollView>

    <TextView
        android:id="@+id/eventNameTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/eventName"
        android:textStyle="bold"
        android:textSize="16sp"
        android:textColor="@android:color/holo_blue_dark"
        android:layout_marginBottom="4dp"
        android:layout_marginTop="16dp"/>

    <TextView
        android:id="@+id/eventDateTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/eventData"
        android:textSize="14sp"
        android:layout_marginBottom="4dp"/>

    <Button
        android:id="@+id/btnAddToCalendar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/btnAdd"
        android:layout_marginTop="16dp"
        android:backgroundTint="@android:color/holo_blue_light"/>

    <Button
        android:id="@+id/btnShowCalendar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Показать события в календаре"
        android:backgroundTint="@android:color/holo_green_light"/>
</LinearLayout>
